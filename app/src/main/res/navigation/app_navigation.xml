<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/app_navigation"
            app:startDestination="@id/mainFragment">

    <fragment android:id="@+id/mainFragment" android:name="com.example.nrfswarm.MainFragment"
              android:label="fragment_main" tools:layout="@layout/fragment_main">
        <action android:id="@+id/action_connect" app:destination="@id/messengerFragment"/>
    </fragment>
    <fragment android:id="@+id/aboutFragment" android:name="com.example.nrfswarm.AboutFragment"
              android:label="fragment_about" tools:layout="@layout/fragment_about"/>
    <fragment android:id="@+id/chartFragment" android:name="com.example.nrfswarm.ChartFragment"
              android:label="fragment_chart" tools:layout="@layout/fragment_chart"/>
    <fragment android:id="@+id/messengerFragment" android:name="com.example.nrfswarm.MessengerFragment"
              android:label="fragment_messenger" tools:layout="@layout/fragment_messenger"/>
</navigation>